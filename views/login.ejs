<% include ./Partials/header.ejs %>

  <div class="container">
    <div class="content">
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"
        class="img1" />
      <p class="header">Login your Pinterest Account</p>

      <% if(error) { %>
        <p class="error">
          <%= error %>
        </p>
        <% } %>

          <form action="/login" method="post">
            <input type="text" name="username" placeholder="Username" class="detail" /><br />
            <input type="password" name="password" placeholder="Password" class="detail" />
            <input type="submit" value="Login" class="btn int" />
          </form>

          <a class="forgot" href="/forgot">Forgot your Password?</a>

          <footer>
            <p>
              By continuing, you agree to Pinterest's
              <b>Terms of Service, Privacy policy.</b>
            </p>
            <a href="/">Dont have an Account? Sign Up</a>
          </footer>
    </div>
  </div>

  <% include ./Partials/footer.ejs %>